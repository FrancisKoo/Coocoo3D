      <Name>Loading</Name>
      <VertexShader>VS_Pass1</VertexShader>
      <PixelShader>PS_Loading</PixelShader>
    </PipelineState>
    <PipelineState>
      <Name>Error</Name>
      <VertexShader>VS_Pass1</VertexShader>
      <PixelShader>PS_Error</PixelShader>
    </PipelineState>
  </PipelineStates>-->
</PassSetting>